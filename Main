bool binary() {
	for (short i = 0; i < 10; i++)
	{
		if (digitalRead(buttonsPins[i])) {
			buttonsStates[i] = !buttonsStates[i];
		}
	}
	if (digitalRead())
	{

	}
}
void gameOver() {

}

