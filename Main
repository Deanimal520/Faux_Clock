        }
        break;
      case 2:
        //
        break;
      case 3:
        //
        break;
      
    }
}

void upDateTimer(double upDateTimerIn){//returns true when time runs out
  int countDown = (upDateTimerIn-millis())/1000;
  fauxTmer.print(countDown);
  if(countDown>0){
    return false;
  }else{
    return true;
  }
}

